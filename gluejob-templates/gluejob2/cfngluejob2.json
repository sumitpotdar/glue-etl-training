{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description":"CloudFomration template for Glue Job Creation",
  "Resources": {
    "glueetljob": {
      "Type": "AWS::Glue::Job",
      "Properties": {
        "Command": {
          "Name": "glueetl",
          "ScriptLocation": {
            "Fn::Join": [
              "",
              [
                "s3://awsgluedemo-sumit-etl-artifacts/gluejob2",
                "/",
                "gluejob2scripts.py"
              ]
            ]
          }
        },
        "Role": "gluejobrole1",
        "DefaultArguments": {
          "--joblanguage": "python",
          "--enable-metrics": true,
          "--job-bookmark-option": "job-bookmark-disable",
          "--enable-continuous-cloudwatch-log": true,
          "--s3_source_bucket": "glue-demo-sumit-datasoup-gluejob2-source",
          "--s3_Destination_bucket": "glue-demo-sumit-datasoup-etl-targets/gluejob2"
        },
        "Description": "Second glue job for the glue pipeline",
        "ExecutionProperty": {
          "MaxConcurrentRuns": 1
        },
        "GlueVersion": "3.0",
        "MaxRetries": 2,
        "Name": "gluejob2",
        "NumberOfWorkers": 15,
        "WorkerType": "G.2X"
      }
    }
  }
}