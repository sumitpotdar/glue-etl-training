



{
  "Resources": {
    "gluejobrole1": {
      "Type": "AWS::IAM::Role",
      "Properties": {
       "AssumeRolePolicyDocument": {
          "Statement": [
            {
              "Action": "sts:AssumeRole",
              "Effect": "Allow",
              "Principal": {
               "Service": "glue.amazonaws.com"
              }
            }
          ],
          "Version": "2012-10-17"
        },
        "ManagedPolicyArns": [
          {
            "Fn::Join": [
              "",
              [
                "arn:",
                {
                  "Ref": "AWS::Partition"
                },
                ":iam::aws:policy/service-role/AWSGlueServiceRole"
              ]
            ]
          }
        ],
        "RoleName": "gluejobrole1"
      }
    },
    "glueriamole1inlinepolicy": {
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyDocument": {
          "Statement": [

            {
              "Action": "s3:*Object",
              "Effect": "Allow",
              "Resource": "arn:aws:s3:::glue-demo-sumit-datasoup-etl-targets/*"
            },
            {
              "Action": "s3:GetObject*",
              "Effect": "Allow",
              "Resource": ["arn:aws:s3:::crawlersumit20231225/crawlerfiles/lab1/csv/*",
                "arn:aws:s3:::awsgluedemo-sumit-etl-artifacts/gluejob-artifacts/gluejob1/*",
                "arn:aws:s3:::glue-demo-sumit-datasoup-etl-targets/*"]
            }
          ],
          "Version": "2012-10-17"
        },
        "PolicyName": "glueriamole1inlinepolicy",
        "Roles": [
          {
            "Ref": "gluejobrole1"
          }
        ]
      }
    }
  }
}
